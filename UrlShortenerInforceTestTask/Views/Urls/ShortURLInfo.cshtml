@using UrlShortenerInforceTestTask.ViewModels
@model DetailsUrlViewModel

<div class="container mt-5">
    <h1>URL Details</h1>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Original URL</h5>
            <p class="card-text">
                <a href="@Model.OriginalUrl" target="_blank">@Model.OriginalUrl</a>
            </p>

            <h5 class="card-title">Shortened URL</h5>
            <p class="card-text">
                <a href="@Model.ShortenedUrl" target="_blank">@Model.ShortenedUrl</a>
            </p>

            <h5 class="card-title">Created By</h5>
            <p class="card-text">@Model.UserName @Model.UserLastName</p>

            <h5 class="card-title">Created On</h5>
            <p class="card-text">@Model.CreatedDate.ToString("yyyy-MM-dd HH:mm:ss")</p>
        </div>
    </div>

    <a href="/Urls/ShortURLsTable" class="btn btn-primary mt-3">Back to List</a>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
